<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=put" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%= campground.title %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campground.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">&#8377;</span>
                        <input class="form-control" type="number" name="campground[price]" id="price"
                            aria-describedby="price" value="<%= campground.price %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image"
                        value="<%= campground.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]"
                        id="description"><%= campground.description %></textarea>
                </div>
                <button class="btn btn-secondary">Add Campground</button>
            </form>
            <a class="btn btn-primary mb-3" href=" /campgrounds/<%=campground._id %> ">Back to Campground</a>
        </div>

    </div>